<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="stockDetailsScreenViewModel"
            type="com.shubham.igiaccounts.stock.stockdetailsscreen.StockDetailsScreenViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stock_detail_screen_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID" />

        <TextView
            android:id="@+id/stock_detail_screen_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name" />

        <TextView
            android:id="@+id/stock_detail_screen_category_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="category" />

        <TextView
            android:id="@+id/stock_detail_screen_rate_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rate" />

        <TextView
            android:id="@+id/stock_detail_screen_percentage_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="percentage" />

        <Button
            android:id="@+id/stock_detail_screen_modify_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="modify" />

        <Button
            android:id="@+id/stock_detail_screen_delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="delete" />
    </LinearLayout>
</layout>
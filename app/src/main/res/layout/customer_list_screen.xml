<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="customerListScreenViewModel"
            type="com.shubham.igiaccounts.customer.customerlistscreen.CustomerListScreenViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/transaction_list_screen_search_date_start_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/customer_list_screen_search_name_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search" />

        <TextView
            android:id="@+id/customer_list_screen_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List" />

        <EditText
            android:id="@+id/customer_list_screen_customerid_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/customer_list_screen_show_details_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Details" />
    </LinearLayout>
</layout>
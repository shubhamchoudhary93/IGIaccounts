<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/sale_list_screen_start_date_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />

        <EditText
            android:id="@+id/sale_list_screen_end_date_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />

        <Button
            android:id="@+id/sale_list_screen_search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search" />

        <TextView
            android:id="@+id/sale_list_screen_sale_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sale List" />

        <EditText
            android:id="@+id/sale_list_screen_sale_id_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned" />

        <Button
            android:id="@+id/sale_list_screen_details_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Details" />

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="salePreviewScreenViewModel"
            type="com.shubham.igiaccounts.sale.salepreviewscreen.SalePreviewScreenViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sale_preview_screen_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/sale_preview_screen_cash_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Cash" />

        <TextView
            android:id="@+id/sale_preview_screen_customer_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sale_preview_screen_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sale_preview_screen_item_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sale_preview_screen_transport_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Transport" />

            <TextView
                android:id="@+id/sale_preview_screen_transport_value_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sale_preview_screen_other_charges_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Other Charges" />

            <TextView
                android:id="@+id/sale_preview_screen_other_charges_value_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sale_preview_screen_bill_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Amount" />

            <TextView
                android:id="@+id/sale_preview_screen_bill_amount_value_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Button
            android:id="@+id/sale_preview_screen_modify_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modify" />


    </LinearLayout>
</layout>
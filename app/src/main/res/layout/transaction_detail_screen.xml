<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="transactionDetailsScreenViewModel"
            type="com.shubham.igiaccounts.transaction.transactiondetailsscreen.TransactionDetailsScreenViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/transaction_list_screen_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID" />

        <TextView
            android:id="@+id/transaction_detail_screen_receipt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receipt" />

        <TextView
            android:id="@+id/transaction_list_screen_customername_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name" />

        <TextView
            android:id="@+id/transaction_list_screen_amount_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount" />

        <TextView
            android:id="@+id/transaction_list_screen_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date" />

        <TextView
            android:id="@+id/transaction_list_screen_details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details" />

        <Button
            android:id="@+id/transaction_list_screen_modify_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modify" />

        <Button
            android:id="@+id/transaction_list_screen_delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete" />

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="stockListScreenViewModel"
            type="com.shubham.igiaccounts.stock.stocklistscreen.StockListScreenViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/stock_list_screen_search_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/stock_list_screen_search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search" />

        <TextView
            android:id="@+id/stock_list_screen_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock List" />

        <EditText
            android:id="@+id/stock_list_screen_stock_id_details_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/stock_list_screen_show_details_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Details" />
    </LinearLayout>
</layout>
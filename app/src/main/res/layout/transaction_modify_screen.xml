<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="transactionModifyScreenViewModel"
            type="com.shubham.igiaccounts.transaction.transactionmodifyscreen.TransactionModifyScreenViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/transaction_modify_screen_receipt_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receipt" />

        <EditText
            android:id="@+id/transaction_modify_screen_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/transaction_modify_screen_amount_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/transaction_modify_screen_date_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />

        <EditText
            android:id="@+id/transaction_modify_screen_details_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <Button
            android:id="@+id/transaction_modify_screen_modify_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="modify" />
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="transactionNewScreenViewModel"
            type="com.shubham.igiaccounts.transaction.transactionnewscreen.TransactionNewScreenViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/transaction_new_receipt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="receipt" />

        <EditText
            android:id="@+id/transaction_new_customer_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/transaction_new_amount_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/transaction_new_date_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />

        <EditText
            android:id="@+id/transaction_new_detail_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <Button
            android:id="@+id/transaction_new_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New" />

    </LinearLayout>
</layout>
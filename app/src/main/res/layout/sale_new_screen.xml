<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="saleNewScreenViewModel"
            type="com.shubham.igiaccounts.sale.salenewscreen.SaleNewScreenViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/sale_new_screen_screen_date_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />

        <EditText
            android:id="@+id/sale_new_screen_party_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/sale_new_screen_item_temp_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Items list" />

        <Button
            android:id="@+id/sale_new_screen_add_item_temp_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD ITMES" />

        <EditText
            android:id="@+id/sale_new_screen_transport_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/sale_new_screen_others_charges_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/sale_new_screen_bill_total_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="Total Value" />

        <Button
            android:id="@+id/sale_new_screen_add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />
    </LinearLayout>
</layout>